ul, ol
  margin 0
  padding 0
  list-style none
a
  color purple
img
  max-width 100%
body
  padding 0
  border 0
  min-height 100%
  background-image url(../img/dark_wall.png)

.container
  max-width 100%
  margin 0 auto
#bg
  position fixed
  top -10%
  left -10%
  height 120%
  width 120%
  z-index -1
  pointer-events none
  background-image -webkit-radial-gradient(50% 50%, ellipse closest-side, rgba(255, 255, 255, .2) 1%, rgba(67, 68, 72, 0.45) 100%)
  background-image -moz-radial-gradient(50% 50%, ellipse closest-side, rgba(255, 255, 255, .2) 1%, rgba(67, 68, 72, 0.45) 100%)
  .lighten-top
    position fixed
    width 120%
    height 50%
    z-index 10
    background-image -webkit-gradient(linear, left top, left bottom, from(rgba(255, 255, 255, 0.64)), to(rgba(255, 255, 255, 0)))
    background-image -moz-linear-gradient(rgba(255, 255, 255, 0.64), rgba(255, 255, 255, 0))
    background-image -o-linear-gradient( rgba(255, 255, 255, 0.64), rgba(255, 255, 255, 0))
    background-image -ms-linear-gradient(rgba(255, 255, 255, 0.64), rgba(255, 255, 255, 0))
    background-image linear-gradient(rgba(255, 255, 255, 0.64), rgba(255, 255, 255, 0))
.container
  margin 200px auto
  width 500px
  text-shadow 2px 2px #fff, 5px, -5px #fff
  -webkit-font-smoothing antialiased
p.noCanvas
  color #999999
  font-size 24px
  text-align center
  margin-top 150px

.box
  width 300px
  max-width 100%
  position relative
  margin 0 auto
  margin-top 200px
.porthole
  height 300px
  width 300px
  max-width 100%
  -webkit-border-radius 50%
  border-radius 50%
  overflow hidden
  border 3px solid light-blue
img
  position absolute
  max-width 100%
  top 7px
  left 3px
  z-index 2
.contact
  text-align center
  margin-top 20px
  a
    text-decoration none
    color #363738
    text-shadow #505050 0 1px 1px
    font-size 18px
    &:hover
      color #787878

.sections
  overflow hidden
  margin 0 auto
  display block
  width 354px
  //border 1px solid red
  padding-top 50px
  li
    float left
    a
      display block
      height 100px
      width 100px
      line-height 100px
      text-align center
      text-decoration none
      color light-blue
      border 2px solid light-blue
      border-radius 50%
      margin 7px
      text-transform uppercase
      font-size .8em
      overflow hidden
      white-space nowrap
      background -moz-linear-gradient(top, rgba(46,44,109,1) 0%, rgba(46,44,109,0) 100%) /* FF3.6+ */
      background -webkit-gradient(linear, left top, left bottom, color-stop(0%,rgba(46,44,109,1)), color-stop(100%,rgba(125,185,232,0))) /* Chrome,Safari4+ */
      background -webkit-linear-gradient(top, rgba(46,44,109,1) 0%,rgba(46,44,109,0) 100%) /* Chrome10+,Safari5.1+ */
      background -o-linear-gradient(top, rgba(46,44,109,1) 0%,rgba(46,44,109,0) 100%) /* Opera 11.10+ */
      background -ms-linear-gradient(top, rgba(46,44,109,1) 0%,rgba(46,44,109,0) 100%) /* IE10+ */
      background linear-gradient(to bottom, rgba(46,44,109,1) 0%,rgba(46,44,109,0) 100%) /* W3C */
      -webkit-transition all 300ms linear
      -moz-transition all 300ms linear
      -ms-transition all 300ms linear
      -o-transition all 300ms linear
      transition all 300ms linear
      &:hover
        background purple
        -webkit-transform translate(0,-10px)

.fade-in
  animation fadeEnter 2s 1
  -moz-animation fadeEnter 2s 1
  -webkit-animation fadeEnter 2s 1
  -o-animation fadeEnter 2s 1
  -webkit-animation-fill-mode:forwards
  opacity 0
  &.one
    -webkit-animation-delay 3s
    -moz-animation-delay 3s
    animation-delay 3s
  &.two
    -webkit-animation-delay 3.2s
    -moz-animation-delay 3.2s
    animation-delay 3.2s
  &.three
    -webkit-animation-delay 3.4s
    -moz-animation-delay 3.4s
    animation-delay 3.4s

@keyframes fadeEnter
   0%
     opacity 0
     -webkit-transform translate(0, -50px)
   100%
     opacity 1.0
     -webkit-transform translate(0, 0)


@media screen and (max-height: 580px)
  .box
    margin-top 50px
@media screen and (max-height: 320px)
  .box
    margin-top 8px

