@import 'nib'

light-blue = #add8e6
purple = #2e2c6d

html, body
  margin 0
  padding 0
  font-family Arial, Helvetica, san-serif
  color #6c6c6c
  -webkit-font-smoothing antialiased

section, article, header, aside, footer
  display block
h1, h2, h3, h4, h5, h6
  color #000
  padding 0
  margin 0
  font-family Arial, Helvetica, san-serif
  text-transform uppercase
  letter-spacing 2px
  font-weight normal
ul, ol
  margin 0
  padding 0
  list-style none
a
  color purple
img
  max-width 100%
body
  padding 0
  border 0
  min-height 100%
  background-image url(../img/dark_wall.png)

.container
  max-width 100%
  margin 0 auto
#bg
  position fixed
  top -10%
  left -10%
  height 120%
  width 120%
  z-index -1
  pointer-events none
  background-image -webkit-radial-gradient(50% 50%, ellipse closest-side, rgba(255, 255, 255, .2) 1%, rgba(67, 68, 72, 0.45) 100%)
  background-image -moz-radial-gradient(50% 50%, ellipse closest-side, rgba(255, 255, 255, .2) 1%, rgba(67, 68, 72, 0.45) 100%)
  .lighten-top
    position fixed
    width 120%
    height 50%
    z-index 10
    background-image linear-gradient(rgba(255, 255, 255, 0.64), rgba(255, 255, 255, 0))
p.noCanvas
  color #999999
  font-size 24px
  text-align center
  margin-top 150px

.box
  width 300px
  max-width 100%
  position relative
  margin 0 auto
  margin-top 200px
  .porthole
    height 300px
    width 300px
    max-width 100%
    border-radius 50%
    overflow hidden
    border 3px solid light-blue
  img
    position absolute
    max-width 100%
    top 7px
    left 3px
    z-index 2

.tagline
  text-align center
  color light-blue
  margin-top 25px
  text-shadow 2px 2px 4px rgba(0,0,0,.5)

.sections
  overflow hidden
  margin 0 auto
  display block
  width 354px
  padding-top 30px
  li
    float left
    a
      display block
      height 100px
      width 100px
      line-height 100px
      text-align center
      text-decoration none
      color light-blue
      border 2px solid light-blue
      border-radius 50%
      margin 7px
      text-transform uppercase
      font-size .8em
      overflow hidden
      white-space nowrap
      background linear-gradient(top, rgba(46,44,109,1) 0%,rgba(46,44,109,0) 100%) /* W3C */
      transition all 300ms linear
      &:hover
        background purple
        transform translate(0,-10px)

.contact
  text-align center
  margin-top 20px
  a
    text-decoration none
    color #363738
    text-shadow #505050 0 1px 1px
    font-size 18px
    &:hover
      color #787878

.fade-in
  animation fadeEnter 2s 1
  animation-fill-mode:forwards
  opacity 0
  &.one
    animation-delay 3s
  &.two
    animation-delay 3.2s
  &.three
    animation-delay 3.4s

@keyframes fadeEnter
  0%
    opacity 0
    transform translate(0, -50px)
  100%
    opacity 1.0
    transform translate(0, 0)


@media screen and (max-height: 580px)
  .box
    margin-top 50px
@media screen and (max-height: 320px)
  .box
    margin-top 8px

