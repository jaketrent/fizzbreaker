// KEYFRAMES
@keyframes fadeSlideLeft50Anim
  0%
    opacity 0
    transform translate(-50px, 0)
  100%
    opacity 1.0
    transform translate(0, 0)
@keyframes fadeSlideTop30Anim
  0%
    opacity 0
    transform translate(0, -30px)
  100%
    opacity 1.0
    transform translate(0, 0)
@keyframes fadeInAnim
  0%
    opacity 0
  100%
    opacity 1.0
