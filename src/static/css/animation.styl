// CLASSES
.fade-slide-top
  animation fadeSlideTop30Anim 2s 1
  animation-fill-mode:forwards
  opacity 0
.fade-slide-left
  animation fadeSlideLeft50Anim 2s 1
  animation-fill-mode:forwards
  opacity 0
.fade-in
  animation fadeInAnim 2s 1
  animation-fill-mode:forwards
  opacity 0
